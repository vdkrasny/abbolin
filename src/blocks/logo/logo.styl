+b('logo')
  size = 100px

  position: absolute
  top: 50%
  left: 50%
  width: size
  height: size
  margin: (-1 * (size / 2))
  z-index: 104
  transition: transform 3s cubic-bezier(0.175, 0.885, 0.32, 1.275)
  &.if-js-disable
    z-index: 97
    .logo__text
      display none
    .logo__preload
      display none
  +m('load')
    z-index: 99
    +e('text')
      visibility: hidden
    +e('preload')
      width: 0
      height: 0
      transform: scaleX(1) scaleY(1) !important
      transition: all 1s 0.1s cubic-bezier(0.485, 0.605, 0, 1)
  +e('image')
    position relative
    transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275)
    width: 100%
    height: 100%
    z-index: 103
  +e('text')
    font-size: 16px;
    position: absolute;
    top: 100%;
    left: -50%;
    right: -50%;
    text-align: center;
    color: #000;
    z-index: 103;
    width: 183%
    white-space:nowrap;
    overflow:hidden;
    animation: type 3s steps(50, end);
  +e('preload')
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    margin: auto
    width: 100%
    height: 100%
    transform: scaleX(25) scaleY(25)
    background: #fff
    z-index: 102

@keyframes type{
  from { width: 0; }
}