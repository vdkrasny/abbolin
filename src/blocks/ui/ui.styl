+b('ui')
  position: relative
  will-change: all
  +m('view-basic')
    display inline-block
    transition: all 0.5s
    padding: 9px 14px
    font-size: 16px
    color: $color-secondary
    background-color: $color-white
    border: 2px solid $color-white
    border-radius: 20px
    text-transform: lowercase