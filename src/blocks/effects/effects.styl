+b('effects')
  overflow:hidden
  +m('waves')
    &:before
    &:after
      position absolute
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      content ''
      width 100%
      height 100%
      background-color alpha(#fff, 40%)
      border-radius 50%
      transform: scaleX(0) scaleY(0);
    &:after
      background-color $color-primary
    &:hover
      &:before
        animation start-wave 0.3s ease-in-out 1 forwards;
        z-index -2
      &:after
        animation and-wave 0.5s ease-in-out 1 forwards;
        animation-delay 0.1s
        z-index -1
    &:active
      transform: translateY(3px);

@keyframes start-wave
  0%
    transform: scaleX(0) scaleY(0);
  100%
    transform: scaleX(1) scaleY(1);
@keyframes and-wave
  0%
    transform: scaleX(0) scaleY(0);
  100%
    transform: scaleX(2) scaleY(2);