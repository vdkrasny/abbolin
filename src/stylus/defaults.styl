*,
*:before
*:after
  box-sizing: border-box
*
*:focus
  outline: none
html
  font-size: $font-size-root
body
  font-family: $font-family-root, sans-serif
  color: $color-white
  background-color: $color-primary
  overflow-x: hidden
a
  color: inherit
input,
textarea
  font-family: $font-family-root, sans-serif
  font-weight: $font-weight-root
  margin: 0
  border: 0
input, select
  vertical-align middle
body
h1
h2
h3
h4
h5
h6
  font-weight: $font-weight-root
  font-size: 1rem
  line-height: 1
  margin: 0
ul
  margin: 0
nav
ul
  padding: 0
  list-style: none
strong
  font-weight: ($font-weight-root + 200)
p
  margin: 0
img
hr
  border: 0
table
  border-collapse collapse
  border-spacing 0
hr
  display block
  height 1px
  margin 1em 0
  padding 0
  border-top 1px solid $color-white

html.fp-enabled
.fp-enabled body
  /*Avoid flicker on slides transitions for mobile phones #336 */
  -webkit-tap-highlight-color: rgba(0,0,0,0)
#superContainer
  position: relative
  height: 100%
  touch-action: none /* IE 11 on Windows Phone 8.1*/
.fp-slide
  float: left
.fp-slidesContainer
  height: 100%
  display: block
.fp-slides
  position: relative
  z-index: 1
  height: 100%
  overflow: hidden
  transition: all 0.3s ease-out
.fp-slidesContainer
  float: left
  position: relative
.fp-scrollable
  overflow: hidden
  position: relative
.fp-scroller
  overflow: hidden
.fp-notransition
  transition: none !important
.fp-auto-height.fp-section
.fp-auto-height .fp-slide
  height: auto !important
.fp-responsive .fp-auto-height-responsive.fp-section,
.fp-responsive .fp-auto-height-responsive .fp-slide
  height: auto !important
.section
  position: relative
  width: 100%
.section__wrapper
  width: 100%
.scrolling__horizontal
.scrolling__vertical
  position: absolute
  z-index: 1
  overflow: hidden
.scrolling__horizontal
  height: 7px
  left: 2px
  right: 2px
  bottom: 0
.scrolling__vertical
  width: 7px
  bottom: 2px
  top: 2px
  right: 1px
.scrolling__scroll-bar
  position: absolute
  background: rgba(0, 0, 0, 0.5)
  border-radius: 3px
.full-screen
  position relative
+b('mac')
  position: relative;
  margin: auto 0 0 auto;
  right: -20%;
  width: 90%
+b('link')
  +e('seo')
    position: absolute;
    display: block;
    width: 100%;
    height: 100%;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 99;
    overflow: hidden;
    text-indent: -99999px;
    opacity: 0;
.slide
  &.if-js-disable
    display none